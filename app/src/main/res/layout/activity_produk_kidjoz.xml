<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdukKidjoz">

    <ImageView
        android:id="@+id/kidjoz"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/produk_kidjoz"/>

    <TextView
        android:id="@+id/title_kidjoz"
        android:layout_below="@+id/kidjoz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kidjoz Kids Honey"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_below="@id/title_kidjoz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adalah produk nutrisi mengandung semua kebaikan madu diracik dengan perpaduan antioksidan lainnya dari ekstrak buah-buahan pilihan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:textAlignment="center"/>

</RelativeLayout>